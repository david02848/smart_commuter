<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.david.trimettrack.StopArrivalCheckActivity">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/StopInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stopIdInputBox"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="17dp"
            android:text="Stop ID"
            android:textColor="#5c4040"
            android:textSize="20sp"
            android:padding="10dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/stopIdInputBox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/StopInfoTitle"
            android:ems="10"
            android:inputType="number"
            android:hint="your Stop ID"
            android:text="Stop ID"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/stopIdRefreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:text="Refresh"
            android:onClick="onClick"
            android:imeOptions="actionDone"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_location"
            android:id="@+id/currentStopLocation"
            android:textColor="#3d3837"
            android:textSize="20sp"
            android:background="#c7c0c0"/>


        <TextView
            android:id="@+id/currentLocationDir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c7c0c0"
            android:padding="5dp"
            android:text="@string/current_direction"
            android:textColor="#3d3837"
            android:textSize="14sp" />

    </LinearLayout>


    <ListView
        android:id="@+id/stopInfoListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/noArrivalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#986c4e"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/errorContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#e7c352"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="RtlHardcoded" />


</LinearLayout>
