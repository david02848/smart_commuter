    <TextView
        android:id="@+id/AdressFormat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggested Input Format: adress, city, state zipode"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/StartInputBox"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp" />

    <CheckBox
        android:id="@+id/LocationCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Current Location"
        app:layout_constraintLeft_toLeftOf="@+id/StartInputBox"
        app:layout_constraintTop_toBottomOf="@+id/StartInputBox"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:onClick="onCheckboxClicked"/>

    <TextView
        android:id="@+id/uberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Uber output"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/DestinationInputBox" />

